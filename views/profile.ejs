<%- include('./partials/header') %>
<%- include('./partials/navbar') %>
<!-- CONTENT HERE -->
<div class="container mt-2 text-center">
  <h3>Profile Info</h3>
  <hr>
</div>
<div class="container mt-5">
    <table class="table">
        <tbody>
            <tr>
              <th>First Name</th>
              <td><%= dataUser.first_name %></td>
            </tr>
            <tr>
              <th>Last Name</th>
              <td><%= dataUser.last_name %></td>
            </tr>
            <tr>
              <th>Email</th>
              <td><%= dataUser.email %></td>
            </tr>
            <tr>
              <th>Phone Number</th>
              <td><%= dataUser.phone_number %></td>
            </tr>
            <tr>
                <th>Birth Date</th>
                <td><%= dataUser.getBirthDate() %></td>
            </tr>
            <tr>
                <th>Address</th>
                <td><%= dataUser.address %></td>
            </tr>
          </tbody>
      </table>
      <div class="text-center">
        <a href="/user/profile/<%= dataUser.id %>/edit" class="btn btn-warning">Edit Data</a>
        <a href="/user/profile/<%= dataUser.id %>/delete" class="btn btn-danger" onClick="return confirm('Are you sure?')">Delete Account</a>
    </div>
</div>


<!-- END OF CONTENT HERE -->
<%- include('./partials/footer') %>