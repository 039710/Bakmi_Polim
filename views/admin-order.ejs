<%- include('./partials/header') %>
<%- include('./partials/navbar') %>

<div class="container mt-5 ">
    <h2>Order List</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Customer Name</th>
                <th>Food Name</th>
                <th>Quantity</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach((user)=>{ %>
                <% user.Food.forEach((food)=>{  %>
                    <tr>
                        <td><%= user.first_name %></td>
                        <td><%= food.name %></td>
                        <td><%= food.Invoice.quantity_per_item %></td>
                        <td><%= food.Invoice.status %></td>
                        <td>
                            <a href="/user/admin/editStatus/<%=food.id%>/<%= user.id%>" class="btn btn-primary">Mark as Complete</a>
                        </td>
                    </tr>
                <% }) %>
            <% }) %>
        </tbody>
    </table>
</div>



