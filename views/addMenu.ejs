<!DOCTYPE html>
<%- include('./partials/header') %>
    <%- include('./partials/navbar') %> 
    <br>
    <div class="text-center">
        <h1>Add Menu</h1>
    </div>   
         <div class="container">
            <form action = "/user/admin/add" method="post">
                <div class="mb-3">
                  <label class="form-label">Name</label>
                  <input type="text" class="form-control" name="name" placeholder="e.g: Bakmi Tanpa Micin">
                </div>
                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <input type="text" class="form-control" name="description" placeholder="e.g: Lorem ipsum dolor sit amet">
                </div>
                <div class="mb-3">
                    <label class="form-label">Image URL</label>
                    <input type="text" class="form-control" name="img_url" placeholder="e.g: blabla.jpg">
                </div>
                <div class="mb-3">
                    <label class="form-label">Price</label>
                    <input type="text" class="form-control" name="price" placeholder="e.g: 20000">
                </div>
                <div class="mb-3">
                    <label class="form-label">Stock</label>
                    <input type="text" class="form-control" name="quantity" placeholder="e.g: 50">
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
                <a href="/user/admin" class="btn btn-danger">Cancel</a>
              </form>
        </div>
    
<%- include('./partials/footer') %>


